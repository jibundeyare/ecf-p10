<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <a href="{{ path('app_home') }}">accueil</a>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_logout') }}">déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}">connexion</a>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    {# @todo #}
                    {# <a href="{{ path('app_emprunteur_index') }}">emprunteurs</a> #}
                    <a href="{{ path('app_admin_auteur_index') }}">auteurs</a>
                    <a href="{{ path('app_admin_livre_index') }}">livres</a>
                    <a href="{{ path('app_admin_user_index') }}">utilisateurs</a>
                    <a href="{{ path('app_emprunt_index') }}">emprunts</a>
                {% endif %}
            </nav>
            <h1>ECF P10</h1>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
